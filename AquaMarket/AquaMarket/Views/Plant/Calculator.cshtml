@using System.Collections.Generic
@model AquaMarket.Models.PlantViewModel

@{
    ViewBag.Title = "Calculator";
}

<div id="calculator_page" class="partial_Lable partial_content">

    <h2>Calculator</h2>
    
    <hr />

    <h4>To find suitable plants for your aquarium enter the parameters below.</h4>

    @using (Html.BeginForm("SelectedPlants", "Plant", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <!--environment-->

            <div class="form-group">
                @Html.LabelFor(model => model.Temp, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Temp, new { htmlAttributes = new { @class = "form-control", placeholder = "Min value is 10, max value is 35." } })
                    @Html.ValidationMessageFor(model => model.Temp, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ph, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Ph, new { htmlAttributes = new { @class = "form-control", placeholder = "Min value is 1.0, max value is 15.0" } })
                    @Html.ValidationMessageFor(model => model.Ph, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Gh, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Gh, new { htmlAttributes = new { @class = "form-control", placeholder = "Min value is 1.0, max value is 30.0" } })
                    @Html.ValidationMessageFor(model => model.Gh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-success" /> |

                @Html.ActionLink("Back", null, null, new { @class = "btn btn-default", role = "button", href = Request.UrlReferrer })
            </div>
        </div>
    }
</div>
