@model AquaMarket.Models.File

@{
    ViewBag.Title = "DeleteFile";
}

<h2>DeleteFile</h2>

<h3>Are you sure you want to delete this file?</h3>

@using (Html.BeginForm("DeleteFileConfirmed", "Plant", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <h4>File</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.HiddenFor(model => model.Id)
            </dt>

            <dt>
                @Html.HiddenFor(model => model.PlantId)
            </dt>

            <dt>
                @Html.HiddenFor(model => model.FileName)
            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.FileName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FileName)
            </dd>


            <dt>
                Image
            </dt>
            <dd>
                <img src="@Url.Content("~/Files/" + Model.FileName)" width="500" alt="Plant image">
            </dd>


        </dl>

    </div>
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to Plant Editing", "Edit",  new { id = Model.PlantId })
    </div>
}
