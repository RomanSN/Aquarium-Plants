<body>
    <div id="header" class="container-fluid content">
        <div id="login" class="row">
            <div id="login_logo" class="col-xs-12 col-sm-6 vcenter">
                @Html.ActionLink("Aquarium Plants", "Index", "Home")
            </div>
            <!--
            -->
            <div id="login_login" class="col-xs-12 col-sm-6 vcenter">
                @Html.Partial("_LoginPartial")

            </div>
        </div>

        <div class="navbar navbar-inverse">
            <div id="navigation" class="container-fluid">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-brand">
                        @Html.ActionLink("Home", "Index", "Home")
                    </div>
                </div>
                <div>
                    <ul class="nav navbar-nav navbar-collapse collapse">
                        <li>@Html.ActionLink("Catalogue", "Index", "Plant")</li>
                        <li><a href="#">Articles</a></li>
                        <li><a href="#">Calсulator</a></li>
                        <li>@Html.ActionLink("Contacts", "Contact", "Home")</li>
                    </ul>
                </div>
               @using (Html.BeginForm("Details", "Plant", FormMethod.Get, new { @class = "navbar-form navbar-right" }))
               {
                    <div class="input-group ">
                        
                        @Html.Hidden("Id", new { id = "Id" })
                        <input id="search" type="text" class="form-control" placeholder="Type plant name here"  value="">
                        <div class="input-group-btn">
                            <button class="btn btn-default " type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
               }
                
            </div>
        </div>

        <div id="сarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#сarousel" data-slide-to="0" class="active"></li>
                <li data-target="#сarousel" data-slide-to="1"></li>
                <li data-target="#сarousel" data-slide-to="2"></li>
                <li data-target="#сarousel" data-slide-to="3"></li>
                <li data-target="#сarousel" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/aquascape1.jpg" alt="aquascape1">
                </div>

                <div class="item">
                    <img src="~/Images/aquascape2.jpg" alt="aquascape2">
                </div>

                <div class="item">
                    <img src="~/Images/aquascape3.jpg" alt="aquascape3">
                </div>
                <div class="item">
                    <img src="~/Images/aquascape4.jpg" alt="aquascape4">
                </div>
                <div class="item">
                    <img src="~/Images/aquascape5.jpg" alt="aquascape5">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#сarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#сarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div id="sections" class="row">
            <div class="col-md-2 col-sm-4">
                <a href="#">
                    <img src="~/Images/Section_Img_1.jpg"
                         alt="Arrangement and equipment">
                    <span>Arrangement and equipment of the aquarium</span>
                </a>
            </div>
            <div class="col-md-2 col-sm-4">
                <a href="#">
