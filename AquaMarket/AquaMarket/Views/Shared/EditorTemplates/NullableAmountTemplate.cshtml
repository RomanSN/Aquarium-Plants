@using System.Globalization;
@model decimal?


@{

    NumberFormatInfo formatProvider = new System.Globalization.CultureInfo("en-US").NumberFormat;

    formatProvider.NumberDecimalSeparator = ",";

    if (Model.HasValue)
    {
        <input type="text" name="Amount" class="form-control" value="@Model.Value.ToString("N", formatProvider)" />
    }
    else
    {
        <input type="text" name="Amount" class="form-control" value="0,00" />
    }
        //"0:0,00", CultureInfo.InvariantCulture

}
