@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
        </ul>
    }
}
else
{
    <ul id="autorize">
        <li>@Html.ActionLink(" Sign up", "Register", "Account", routeValues: null, htmlAttributes: new { @class ="btn btn-primary glyphicon glyphicon-log-in", role="button"})</li>
        <li>@Html.ActionLink(" Sign in", "Login", "Account", routeValues: null, htmlAttributes: new {@class="btn btn-default glyphicon glyphicon-user", role="button"})</li>
    </ul>
    
}
