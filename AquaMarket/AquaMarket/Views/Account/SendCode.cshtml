@model AquaMarket.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}
<div id="reset_password_page" class="partial_Lable partial_content">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h4>Отправить проверочный код</h4>
        <hr />
        <div class="row">
            <div class="col-md-8">
                Choosing a two-factor authentication provider:
                @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
